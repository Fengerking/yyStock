<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/activity_main"
        android:background="@color/colorPrimaryDark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/lstStock"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/lay_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_hide"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:text="H" />
            <Button
                android:id="@+id/btn_update"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:text="U" />


            <EditText
                android:id="@+id/edt_one"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/btn_del"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:text="-" />
            <Button
                android:id="@+id/btn_add"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:text="+" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/lay_hist"
            android:layout_width="fill_parent"
            android:layout_height="96dp">

            <ListView
                android:id="@+id/lst_info"
                android:layout_width="132dp"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimaryDark"/>

            <ListView
                android:id="@+id/lst_hist"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/lay_image"
            android:layout_width="fill_parent"
            android:layout_height="42dp">

            <Button
                android:id="@+id/btn_imghide"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:text="H" />
            <Button
                android:id="@+id/btn_fs"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:text="FS" />

            <Button
                android:id="@+id/btn_30Days"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="30" />

            <Button
                android:id="@+id/btn_90Days"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="90" />

            <Button
                android:id="@+id/btn_180Days"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="180" />

            <Button
                android:id="@+id/btn_week"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="W" />

            <Button
                android:id="@+id/btn_month"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="M" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/lay_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/lay_imgView"
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/img_stockBG"
                    android:background="@drawable/ic_launcher_foreground"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>

                <ImageView
                    android:id="@+id/img_stock"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"/>

            </RelativeLayout>

            <ListView
                android:id="@+id/lst_one"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>